.container{
  height: 360rpx;
  width: 90%;
  margin:20rpx auto;
}
.container .header{
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}
.container .header .activity-img{
  width: 100%;
  height: 100%;
}
.container .header .time-end{
  position: absolute;
  font-size:24rpx;
  right:0;
  top: 30rpx;
  background-color: darksalmon;
  color: #fff;
  padding: 10rpx 20rpx 10rpx 20rpx;
  border-radius: 20rpx 0 0 20rpx;
}
.container .header .activity-name{
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  color: #fff;
}

.container .footer{
  height: 50rpx;
  display: flex;
  font-size: 24rpx;
  margin: 10rpx;
  line-height: 50rpx;
}
.container .footer .left{
  flex: 1;
  display: flex;
}
.container .footer .right{
  vertical-align: middle;
}
.container .footer .left .avatar{
  height: 50rpx;
  width: 50rpx;
  border-radius: 25rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

