/* pages/activityInfo/activityInfo.wxss */
.activity-info{
  min-height: 100vh;
  background-color: #c4c4c4;
}
.activity-info .cell{
  font-size: 28rpx;
  line-height: 48rpx;
  display: flex;
  background-color: #ffffff;
  box-sizing: border-box;
  padding: 20rpx;
  border-bottom: 1px solid #ebedf0;
}
.activity-info .cell .cell-title{
  flex:1;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.activity-info .cell .cell-value{
  flex:1;
  text-align: right;
  color:#969799;
}
.activity-info .avatar{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.activity-info .cell-icon{
  display:inline-flex;
  align-items: center;
}
